@{
    ViewData["Title"] = "Delete Application";
}

@model MovieResponse

<div class="deleteMessage">
    <h2>Confrim Deletion</h2> <br />
    <h3>Are you sure you want to delete @Model.Title?</h3><br />

    <form method="post" asp-controller="Home" asp-action="Delete">
        <button type="submit" class="btn">Delete</button>
        <a asp-controller="Home" asp-action="MovieList" class="btn">Cancel</a>

        <input type="hidden" asp-for="MovieId" />
    </form>
</div>
